<html>
  <head>
    <link rel="stylesheet" type="text/css" href="<%= url('/registro.css?v=7000') %>" />
    <title>Registrate</title>  
  </head>
  <body>
  <form action="/register" method = "post">
  <div class="input-field">
    <h2>Escriba su nombre de usuario</h2>
    <input type="text" name="username" placeholder="Nombre de usuario" required></input>
    <h2>Correo electrónico</h2>
    <input type="text" name="email" placeholder="Dirección de correo electrónico" required></input>
    <i class='bx bx-user' ></i>
  </div>
  <div class="input-field">
    <h2>Ingrese una contraseña</h2>
    <input type="password" name="password" placeholder="Escriba su contraseña" required></input>
    <i class='bx bx-lock-alt'></i>
    <h2>Ingrese de nuevo la contraseña</h2>
    <input type="password" name="password2" placeholder="Escriba de nuevo su contraseña" required></input>
  </div>
    <button type="submit" value="LogIn">Registrarme</button>
  </form>
  </body>
</html>